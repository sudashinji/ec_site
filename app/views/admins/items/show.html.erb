<div class="container">
    <h2>商品詳細画面</h2>
        <div class="col-md-5 col-md-offset-1">
            <%= attachment_image_tag @item, :image, :fill, 300, 300, format:'jpeg',fallback: "no_image.jpeg" %>
        </div>
        <div class="col-md-5 col-md-offset-">
            <table class="table">
                <tbody>
                
                <tr>
                    <td>商品名
                    <td><%= @item.name%></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @item.details %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= @genre.name %></td>
                <tr>
                    <td>税込価格
                    <td>&yen;<%= @item.price %> (税込)</td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><%= @item.status %>
                </tr>
            </table>
        </div>
    </div>
</div>