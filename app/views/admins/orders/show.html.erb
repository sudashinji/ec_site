<div class="container">
    <div class="row">
     <h1>注文詳細画面</h1>
    </div>
    <div class="row">
      <p>購入者</p>
      <label><%= @order.end_user.last_name %><%= @order.end_user.first_name %></label>
    </div>
    <div class="row">
      <p>配送先</p>
      <label>〒<%= @order.postal_code %></label>
      <label><%= @order.street_address %></label>
      <label><%= @order.address %></label>
    </div>
    <div class="row">
      <p>支払方法</p>
      <label><%= @order.payment %></label>
    </div>
    <div class="row">
      <p>注文ステータス</p>
      <label>
        <%= form_for(@order, url: admins_order_path) do |f| %>
            <%= f.select :order_status, [["入金待ち", "入金待ち"], ["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]], include_blank: "選択して下さい" %>
            <%= f.submit '更新' %>
        <% end %>
      </label>
    </div>

    <div class="row">
        <table class="table">
            <thead class="thead bg-info text-white">
                <tr>
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>製作ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @order_details.each do |order_detail| %>
                    <tr>
                        <td><%= order_detail.item.name %></td>
                        <td><%= (order_detail.item.price*1.1).round %></td>
                        <td><%= order_detail.amount %></td>
                        <td>
                        　　　<%= ((order_detail.item.price*1.1).round)*(order_detail.amount) %>
                        　　　<% @total_price += (order_detail.item.price*1.1)*(order_detail.amount) %>
                        </td>
                        <td>
                            <%= form_with(model: order_detail, url: admins_order_detail_path(order_detail), method: :patch, local: true) do |f| %>
                                <%= f.select :make_status, [["着手不可", "着手不可"], ["製作待ち", "製作待ち"], ["製作中", "製作中"], ["製作完了", "製作完了"]], include_blank: "選択して下さい" %>
                                <%= f.submit '更新' %>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
       </table>
    </div>

    <div class="row">
        <p>商品合計</p>
        <label><%= (@total_price).round %>円</label>
    </div>
    <div class="row">
        <p>送料</p>
        <label><%= @order.postage %>円</label>
    </div>
    <div class="row">
        <p>請求金額合計</p>
        <label><%= (@total_price+@order.postage).round %>円</label>
    </div>
</div>