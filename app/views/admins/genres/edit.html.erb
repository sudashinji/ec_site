<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <h2>ジャンル編集画面</h2>
        </div>
    </div>
    <br>
    <div class="row">
        <div class= "col-md-5 col-md-offset-1">
            
                <%= form_for(@genre, url: admins_genre_path(@genre)) do |genre| %>
                <table>
                    <tr>
                
                    
                        <td>ジャンル</td>
                        <td><%= genre.text_field :name %></td>
                        <td><label><%= genre.radio_button :status, "有効" %>有効</label></td>
                        <td><label><%= genre.radio_button :status, "無効" %>無効</label></td>
                        
                        <td><%= genre.submit "追加", class: "btn btn-primary" %></td>
                    
                </tr>
            </table>

                    
                <% end %>
            
        </div>
    </div>
</div>