<!DOCTYPE html>
<html>
  <head>
    <title>EcSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class="container">
                <% if end_user_signed_in? %>
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item ">
                    <%= link_to "my_page", end_users_end_user_path(current_end_user) %>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "商品一覧", end_users_items_path %>
                  </li>
                  <li>
                    <%= link_to "カート一覧", end_users_cart_items_path %>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                </ul>
                <% elsif admin_signed_in? %>
                <ul class="navbar-nav">
                  <li>
                    <%= link_to "ジャンル登録", admins_genres_path %>
                  </li>
                  <li class="nav-item ">
                     <%=link_to "商品一覧", admins_items_path %>
                  </li>
                  <li class="nav-item ">
                    <%=link_to "会員一覧", admins_end_users_path %>
                  </li>
                  <li class="nav-item ">
                    <%=link_to "商品登録", new_admins_item_path %>
                  </li>
                  <li class="nav-item ">
                    <%=link_to "注文一覧", admins_orders_path %>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                </ul>
                <% else %>
                <ul class="navbar-nav">
                  <li class="nav-item ">
                    <%= link_to "sign_up", new_end_user_registration_path %>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "log_in", new_end_user_session_path %>
                  </li>
                </ul>
                <% end %>
        </div>
    </header>
    <%= yield %>
  </body>
</html>