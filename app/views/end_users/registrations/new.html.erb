<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :last_name, "姓" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
    </div>

    <div class="field">
      <%= f.label :first_name, "名" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
    </div>

    <div class="field">
      <%= f.label :last_name_kana, "カナ姓" %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "カナ姓" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana, "カナ名" %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "カナ名" %>
    </div>


    <div class="field">
      <%= f.label :email, "メール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :postal_code, "郵便番号" %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
    </div>

    <div class="field">
      <%= f.label :phone_number, "電話番号" %><br />
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード再確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "end_users/shared/links" %>
</div>