<div class="container">
　<div class="row">
    <h1>my_page</h1>
  </div>
  <div class="row">
      <p>登録情報</p>
      <label><%= link_to "edit", edit_end_users_path,class: "btn btn-bg btn-info" %></label>
      <label><%= link_to "delete", end_users_path(current_end_user.id), method: :delete, data: {confirm: "削除しますか？" },class: "btn btn-bg btn-danger" %></label>
  </div>
  <div class="row">

            <table>
                <tbody>
                    <tr>
                        <td>氏名</td>
                        <td><%= current_end_user.last_name %> <%= current_end_user.first_name %></td>
                    </tr>
                    <tr>
                        <td>カナ</td>
                        <td><%= current_end_user.last_name_kana %>　<%= current_end_user.first_name_kana %>
                        </td>
                    </tr>
                    <tr>
                        <td>郵便番号</td>
                        <td>〒<%= current_end_user.postal_code %></td>
                        <!--- slice.(1..4)で分割表示することも可--->
                    </tr>
                    <tr>
                        <td>電話番号</td>
                        <td><%= current_end_user.phone_number %></td>
                    </tr>
                    <tr>
                        <td>メールアドレス</td>
                        <td><%= current_end_user.email %></td>
                    </tr>
                </tbody>
            </table>

    <div>
     <p>配送先<%= link_to "一覧を見る", end_users_addresses_path, class: "btn btn-bg btn-info" %></p>
    </div>
  </div>

</div>