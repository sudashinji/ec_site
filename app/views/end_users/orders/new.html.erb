<div class="container">
	<h4>購入情報入力</h4>
	<%= form_for(@order, url: vericreate_end_users_orders_path) do |f| %>
	  <div>
	    <h5>支払方法</h5>
		<label><%= f.radio_button :payment_method, :クレジットカード %>クレジットカード</label>
		<label><%= f.radio_button :payment_method, :銀行振込 %>銀行振込</label>
	  </div>
	  <div>
		  <div>
			<h5>お届け先</h5>
			<label><%= radio_button_tag :address_btn, 1 %>ご自身の住所</label>
			<div>
				<%= current_end_user.street_address%>
				<%= current_end_user.postal_code %>
				<%= current_end_user.surname %>
		        <%= current_end_user.name %>
		    </div>
		  </div>
		  <div>
	        <label><%= radio_button_tag :address_btn, 2 %>登録済住所から選択</label>
		        <div>
			        <%= f.collection_select(:address, current_end_user.addresses.all, :id, :full_address, include_blank: "選択して下さい") %>
			    </div>
		  </div>
		  <div>
		    <label><%= radio_button_tag :address_btn, 3 %>新しいお届け先</label>
		    <div>
		        <label>郵便番号<%= f.text_field :postal_code %>ハイフンなし</label>
		        <label>住所<%= f.text_field :street_address %></label>
		        <label>宛名<%= f.text_field :address %></label>
		    </div>
		  </div>
	  </div>

	    <%= f.submit "確認画面へ進む" , class: "btn btn-info" %>
	<% end %>

</div>